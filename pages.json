{
	"easycom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "启程",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		},
		{
			"path": "pages/option/option",
			"style": {
				"navigationBarTitleText": "工具",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		},
		{
			"path": "pages/routePage/routePage",
			"style": {
				"navigationBarTitleText": "路线",
				"navigationBarTextStyle": "light",
				"navigationBarBackgroundColor": "#1F82FF"
			}
		},
		{
			"path": "pages/collect/collect",
			"style": {
				"navigationBarTitleText": "路线仓库",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		},
		{
			"path": "pages/document/document",
			"style": {
				"navigationBarTitleText": "版本说明",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		},
		{
			"path": "pages/about/about",
			"style": {
				"navigationBarTitleText": "关于",
				"navigationBarBackgroundColor": "#FFFFFF"
			}
		}

	],
	"tabBar": {
    "color": "#999FA5",
		"selectedColor": "#1F82FF",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [{
        "pagePath": "pages/index/index",
        "iconPath": "static/icon/road.png",
        "selectedIconPath": "static/icon/road-click.png",
        "text": "路线"
    },
		{
        "pagePath": "pages/option/option",
        "iconPath": "static/icon/option.png",
        "selectedIconPath": "static/icon/option-click.png",
        "text": "关于"
    }]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	}
}
